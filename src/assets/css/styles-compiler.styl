@font-face 
    font-family: 'Icons';
    src:  url('../fonts/icomoon.eot?ar77re');
    src:  url('../fonts/icomoon.eot?ar77re#iefix') format('embedded-opentype'),
    url('../fonts/icomoon.ttf?ar77re') format('truetype'),
    url('../fonts/icomoon.woff?ar77re') format('woff'),
    url('../fonts/icomoon.svg?ar77re#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
    font-display: block;

html
    font-family: Arial, Helvetica, sans-serif
    header
        background: #444444
        display: flex
        justify-content: space-between
        box-shadow: 0px 3px 2px 0px rgba(0,0,0,0.2);
        div:first-child
            display: flex
        div
            .logo
                padding: 0 35px
                border-right: 2px solid #22bce0
                margin: 10px 0
                img
                    height: 100px
            .encabezado
                margin: 10px 0
                padding: 0 10px
                display: flex
                flex-direction: column
                justify-content: center
                .titulo,.clase,.fuente
                    color: white
                .titulo
                    h2
                        font-size: 18px;
                .clase
                    margin-top: 5px
                    h3
                        font-size: 14px
                        font-style: italic
                        color: #22bce0
                        font-weight: bold
                .fuente
                    display: flex
                    margin-top: 5px
                    align-items: first baseline
                    p
                        margin-right: 5px
                        cursor: pointer
                        color: #dd4f24
                    p:first-child
                        font-size: 12px
                    p:last-child
                        font-size: 20px
        .avatar-publicar
            display: flex
            align-items: center
            margin-right: 30px
            .btn
                background: #dd4f24
                padding: 4px 35px 4px 65px
                margin-right: -5px
                text-align: right
                p
                    position: relative
                    color: white;
                    font-style: italic;
                    font-size: 30px
                    span
                        position: absolute
                        left -55px
                        top -15px
                        font-size: 3.2rem
                        &::before
                            font-family: "Icons"
                            content: "\e908"
            .avatar
                display: flex
                align-items: center;
                .img-avatar
                    margin-right: -5px;
                    z-index: 1;
                    img
                        height: 50px;
                        border-radius: 50%
                .menu
                    background: #dd4f24;
                    height: fit-content;
                    padding: 5px 5px 5px 10px;
                    p
                        color: white;
                        span
                            &::before
                                font-family: "Icons"
                                font-size: 2rem
                                content: "\e900"
    
    nav 
        padding: 15px 0
        padding-left: 20px
        background: #22bce0
        ul 
            display: flex
            align-items: center
            li 
                margin-right: 35px
                box-shadow: 0 3px 2px 0 rgba(0,0,0,0.1)
                a
                    color: white
                    text-decoration: none
                    &:hover
                        color: rgba(0,0,0,0.2)
    body
        background-color: #E7E7E7
        section 
            display flex
            flex-flow: row wrap 
            article 
                background-color: white
                flex-basis: 45%
                width: 100%
                margin: 10px auto
                border-bottom-left-radius: 16px
                border-bottom-right-radius: 16px
                box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
                .contenido
                    display: flex
                    border-bottom: 3px solid #22bce0
                    .informacion
                        flex-grow: 1
                        padding: 10px
                        .titulo
                            margin-top: 10px
                            font-size: 18px
                            font-weight: bold
                            font-style: italic
                        .autor
                            margin-top: 5px
                            span
                                color: #dd4f24
                                text-decoration: underline
                        .tag-tiempo
                            display: flex
                            justify-content: space-between
                            margin-top:5px
                            .tag
                                color: white
                                background-color: #22bce0
                                padding: 5px 10px
                                border-radius: 16px
                .puntuacion
                    display: flex
                    justify-content: space-between
                    height: max-content
                    padding: 10px 15px
                    .ranking
                        p
                            .up
                                color: green
                                &::before
                                    font-family: "Icons"
                                    display: inline-block
                                    transform: rotate(180deg)
                                    content: "\e900"
                            .down
                                color: red
                                &::before
                                    font-family: "Icons"
                                    display: inline-block
                                    content: "\e900"
                    .calificacion
                        p
                            .puntaje
                                background-color: #444444
                                color white
                                padding: 3px 5px
                                border-radius: 2px
                            .ico
                                margin-left: 10px
                                color: #fcb92d
                                &::before
                                    font-family: "Icons"
                                    content: "\e9d8"
    footer
        background: #dd4f24
        padding: 50px 0
        display: flex
        justify-content: center
        div
            display: inherit
            width: min-content
            p
                display: inherit
                flex-direction: column
                align-items: center
                width: max-content
                color: rgba(255,255,255,0.5)
                font-weight: bold
                span
                    font-weight: normal
                    &::before
                        content: "- "
                    &::after
                        content: " -"
